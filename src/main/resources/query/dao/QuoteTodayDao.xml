    <select id="findCalQuoteToday" resultType="cn.huaruan.ud24.query.entity.QuoteToday">
        SELECT *
FROM (SELECT *
        FROM `quote_today`
        WHERE `o_id`
        IN (
            SELECT `id`
            FROM `organization`
            WHERE FIND_IN_SET(`id`,getParentList(#{orgId})))
        ) AS `q`
LEFT JOIN organization `o`
ON `q`.`o_id` = `o`.`id`
GROUP BY `q`.`id`
HAVING
MAX(`o`.`level`) = (
    SELECT MAX(`level`)
    FROM (
        SELECT *
        FROM `quote_today`
        WHERE `o_id`
        IN (
            SELECT `id`
            FROM `organization`
            WHERE FIND_IN_SET(`id`,getParentList(#{orgId})))
        ) AS `q`
    LEFT JOIN `organization` `o`
    ON `q`.`o_id` = `o`.`id`
    )
    </select>

